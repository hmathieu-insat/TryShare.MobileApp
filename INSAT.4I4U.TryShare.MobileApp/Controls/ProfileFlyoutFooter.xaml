<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:INSAT._4I4U.TryShare.MobileApp.ViewModel.ProfileFlyoutHeader"
             x:DataType="vm:ProfileFlyoutViewModel"
             x:Class="INSAT._4I4U.TryShare.MobileApp.Controls.ProfileFlyoutFooter">
    <VerticalStackLayout VerticalOptions="Center"
                         HorizontalOptions="Center">
        <Button Text="{Binding ConnectionButtonText}"
                Command="{Binding LogInOutCommand}"
                BackgroundColor="Red"
                TextColor="White"
                CornerRadius="10"
                Margin="0,0,0,10"
                WidthRequest="100"
                HeightRequest="40" />
    </VerticalStackLayout>
</ContentView>
